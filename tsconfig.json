{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "./build"
  },
  "atom": { "rewriteTsconfig": false },
  "typeRoots": [
    "node_modules/@types",
    "@types"
  ],
  "filesGlob": [
    "./src/**/*.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}
